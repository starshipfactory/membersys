create keyspace sfmembersys with placement_strategy = 'org.apache.cassandra.locator.SimpleStrategy' and strategy_options = {replication_factor:1};
use sfmembersys;
create column family application with comparator = 'AsciiType' and key_validation_class = 'LexicalUUIDType' and column_metadata = [{column_name: name, validation_class: UTF8Type}, {column_name: street, validation_class: UTF8Type}, {column_name: city, validation_class: UTF8Type}, {column_name: country, validation_class: UTF8Type}, {column_name: email, validation_class: UTF8Type}, {column_name: phone, validation_class: UTF8Type}, {column_name: username, validation_class: UTF8Type}, {column_name: sourceip, validation_class: AsciiType}, {column_name: useragent, validation_class: UTF8Type}, {column_name: pwhash, validation_class: UTF8Type}, {column_name: fee, validation_class: LongType}, {column_name: email_verified, validation_class: BooleanType}, {column_name: fee_yearly, validation_class: BooleanType}, {column_name: metadata, validation_class: BytesType}];
